{
  "name": "@guanghechen/site-api",
  "version": "1.0.0-alpha.0",
  "description": "site api",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/static-site-api.git",
    "directory": "packages/site-api"
  },
  "homepage": "https://github.com/guanghechen/static-site-api/tree/master/packages/site-api#readme",
  "main": "lib/cjs/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development rollup -w -c ../../rollup.config.js",
    "build": "cross-env NODE_ENV=production rollup -c ../../rollup.config.js",
    "prebuild": "rimraf lib/ && tsc -p tsconfig.src.json --emitDeclarationOnly",
    "prepublishOnly": "cross-env ROLLUP_SHOULD_SOURCEMAP=false yarn build",
    "test": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir .",
    "test:update": "node -r ts-node/register -r tsconfig-paths/register __test__/answer.ts"
  },
  "dependencies": {
    "@guanghechen/option-helper": "^1.3.1",
    "@types/fs-extra": "^9.0.8",
    "@types/js-yaml": "^4.0.2",
    "chalk": "^4.1.1",
    "chokidar": "3.5.2",
    "dayjs": "^1.10.6",
    "fs-extra": "^10.0.0",
    "globby": "12.0.0",
    "js-yaml": "^4.1.0",
    "tiny-invariant": "^1.0.2"
  },
  "devDependencies": {
    "strip-ansi": "^7.0.0"
  }
}
