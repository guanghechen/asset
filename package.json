{
  "name": "@guanghechen/static-site-api",
  "version": "0.0.0",
  "description": "api of static site",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/static-site-api.git"
  },
  "homepage": "https://github.com/guanghechen/static-site-api/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lint:fix": "eslint . --fix",
    "new:ts-package": "node ./packages/template-ts-package/cli.js",
    "new:tsx-package": "node ./packages/template-tsx-package/cli.js",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna exec 'echo && pwd && yarn test' --concurrency 1",
    "test:coverage": "lerna exec 'echo && pwd && yarn test --coverage' --concurrency 1",
    "test:update": "lerna exec 'echo && pwd && yarn test -u' --concurrency 1",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.18.6",
    "@babel/eslint-parser": "7.18.2",
    "@guanghechen/eslint-config": "^1.9.5",
    "@guanghechen/eslint-config-ts": "^1.9.5",
    "@guanghechen/invariant": "^1.9.5",
    "@guanghechen/jest-config": "^1.9.5",
    "@guanghechen/rollup-config": "^1.9.5",
    "@guanghechen/rollup-config-cli": "^1.9.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^10.1.0",
    "gitmoji-changelog": "^2.3.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "27.0.6",
    "lerna": "^5.1.6",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "2.7.1",
    "rimraf": "~3.0.2",
    "rollup": "2.75.7",
    "ts-jest": "^27.0.4",
    "ts-node": "10.8.2",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4",
    "yarn-deduplicate": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
