{
  "name": "@guanghechen/static-site-api",
  "version": "0.0.0",
  "description": "api of static site",
  "homepage": "https://github.com/lemon-clown/static-site-api/#readme",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/static-site-api.git"
  },
  "engines": {
    "node": ">= 12.16.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish --no-private",
    "start": "lerna run --parallel start",
    "build": "lerna run --concurrency 1 build",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna run --parallel test",
    "clean": "lerna clean --yes && yarn install",
    "format": "yarn find-inconsistent && yarn sort-imports && yarn lint:fix",
    "lint:fix": "lerna run --parallel lint:fix",
    "find-inconsistent": "barusu-find-inconsistent .",
    "sort-imports": "barusu-sort-imports ."
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@barusu/tool-find-inconsistent": "^0.0.46",
    "@barusu/tool-sort-imports": "^0.0.46",
    "@types/node": "^13.7.6",
    "cross-env": "~7.0.2",
    "lerna": "~3.22.1",
    "jest": "^26.5.3",
    "rimraf": "~3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "~9.0.0",
    "tsconfig-paths": "~3.9.0",
    "typescript": "~4.0.3"
  },
  "@barusu/tool-sort-imports": {
    "logLevel": "verbose",
    "pattern": [
      "**/{src,__test__}/**/*.{ts,tsx}",
      "!**/__test__/cases",
      "!**/node_modules"
    ],
    "moduleRanks": [
      {
        "regex": "^[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.3
      },
      {
        "regex": "^@[a-zA-Z\\d][\\w\\-.]*\\/[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.4
      },
      {
        "regex": "^(?:\\/|[a-zA-Z]:)",
        "rank": 3.1
      },
      {
        "regex": "^[.]{2}[\\/\\\\][^\\n]*",
        "rank": 3.2
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*",
        "rank": 3.3
      }
    ],
    "indent": "  ",
    "quote": "'",
    "semicolon": false,
    "maxColumn": 80,
    "blankLinesAfterStatement": 1
  }
}
