{
  "name": "@guanghechen/static-site-api",
  "version": "0.0.0",
  "description": "api of static site",
  "homepage": "https://github.com/lemon-clown/static-site-api/#readme",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/static-site-api.git"
  },
  "engines": {
    "node": ">= 12.16.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:find-inconsistent format:sort-imports format:lint:fix format:prettier",
    "format:prettier": "prettier --write .",
    "format:find-inconsistent": "barusu-find-inconsistent .",
    "format:lint:fix": "eslint . --fix",
    "format:sort-imports": "barusu-sort-imports .",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "rebuild": "yarn clean && yarn build",
    "start": "lerna run start --parallel",
    "test": "lerna run test --parallel",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@barusu/eslint-config": "^0.0.46",
    "@barusu/tool-find-inconsistent": "^0.0.46",
    "@barusu/tool-sort-imports": "^0.0.46",
    "@guanghechen/rollup-config": "^1.0.13",
    "@types/fs-extra": "^9.0.8",
    "@types/node": "^13.13.30",
    "cross-env": "~7.0.2",
    "fs-extra": "^9.1.0",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "jest": "26.6.3",
    "lint-staged": "^10.5.4",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "rimraf": "~3.0.2",
    "rollup": "2.40.0",
    "ts-jest": "^26.4.4",
    "ts-node": "~9.1.1",
    "tsconfig-paths": "~3.9.0",
    "typescript": "~4.1.5",
    "yarn-deduplicate": "^3.1.0"
  },
  "@barusu/tool-sort-imports": {
    "logLevel": "verbose",
    "pattern": [
      "**/{src,__test__}/**/*.{ts,tsx}",
      "!**/__test__/cases",
      "!**/node_modules"
    ],
    "moduleRanks": [
      {
        "regex": "^[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.3
      },
      {
        "regex": "^@[a-zA-Z\\d][\\w\\-.]*\\/[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.4
      },
      {
        "regex": "^(?:\\/|[a-zA-Z]:)",
        "rank": 3.1
      },
      {
        "regex": "^[.]{2}[\\/\\\\][^\\n]*",
        "rank": 3.2
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*",
        "rank": 3.3
      }
    ],
    "indent": "  ",
    "quote": "'",
    "semicolon": false,
    "maxColumn": 80,
    "blankLinesAfterStatement": 1
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
