{
  "name": "@guanghechen/static-site-api",
  "version": "0.0.0",
  "description": "api of static site",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/static-site-api.git"
  },
  "homepage": "https://github.com/guanghechen/static-site-api/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:find-inconsistent format:lint:fix format:prettier",
    "format:prettier": "prettier --write .",
    "format:find-inconsistent": "barusu-find-inconsistent .",
    "format:lint:fix": "eslint . --fix",
    "format:sort-imports": "barusu-sort-imports .",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "rebuild": "yarn clean && yarn build",
    "start": "lerna run start --parallel",
    "test": "lerna run test --parallel",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.13.8",
    "@babel/eslint-parser": "^7.13.8",
    "@barusu/tool-find-inconsistent": "^0.0.46",
    "@guanghechen/eslint-config": "^1.2.1",
    "@guanghechen/eslint-config-ts": "^1.2.1",
    "@guanghechen/jest-config": "^1.2.1",
    "@guanghechen/rollup-config": "^1.2.1",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.19",
    "@types/node": "^13.13.30",
    "cross-env": "7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-extra": "^9.1.0",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "jest": "26.6.3",
    "lint-staged": "^10.5.4",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "prettier": "2.2.1",
    "rimraf": "~3.0.2",
    "rollup": "2.40.0",
    "ts-jest": "^26.4.4",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.2",
    "yarn-deduplicate": "^3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
